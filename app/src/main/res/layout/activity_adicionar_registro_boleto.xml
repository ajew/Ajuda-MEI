<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewBoletoDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrição"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextBoletoDescricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewBoletoDescricao"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoletoDescricao"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewBoletoDescricao" />

    <TextView
        android:id="@+id/textViewBoletoPreco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preço"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextBoletoDescricao"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextBoletoDescricao"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextBoletoDescricao" />

    <EditText
        android:id="@+id/editTextBoletoPreco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Preço"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewBoletoPreco"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoletoPreco"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewBoletoPreco" />

    <TextView
        android:id="@+id/textViewBoletoData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Data"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextBoletoPreco"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextBoletoPreco"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextBoletoPreco" />

    <EditText
        android:id="@+id/editTextBoletoData"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Data"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoletoData"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_calendario_boleto"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_adicionar_boleto"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_adicionar_boleto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar boleto"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewBoletoData"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoletoData"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewBoletoData"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/bt_calendario_boleto"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:text="Calendario"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_adicionar_boleto"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewBoletoData"
        app:layout_constraintVertical_bias="0.2"
        android:background="@color/colorPrimaryDark"
        style="@style/buttonCalendarStyle"
        android:layout_marginRight="45dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>