<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajudamei.allan_arthur.com.ajuda_mei.caixa.registro.aquisicao_mat_prima.ShowRegistroAquisicaoMatPrimaActivity">

    <ImageView
        android:id="@+id/img_aquisicao_mat_prima"
        android:layout_width="91dp"
        android:layout_height="79dp"
        android:src="@android:color/holo_green_light"
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nome_aquisicao_mat_prima"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="TextViewAquisicaoMatPrima"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_aquisicao_mat_prima"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/img_aquisicao_mat_prima"
        app:layout_constraintLeft_toRightOf="@+id/img_aquisicao_mat_prima" />

    <TextView
        android:id="@+id/txt_quantidade_aquisicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextViewQuantidade"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome_aquisicao_mat_prima"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_aquisicao_mat_prima"
        android:layout_marginLeft="8dp" />

    <ListView
        android:id="@+id/extrato_aquisicao"
        android:layout_width="0dp"
        android:layout_height="327dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bt_incrementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Materia-prima"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_quantidade_aquisicao"
        android:layout_marginRight="101dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
