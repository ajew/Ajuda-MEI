<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nome"
        android:layout_width="200dp"
        android:layout_height="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/quantidade"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imagem"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/quantidade"
        android:layout_width="200dp"
        android:layout_height="25dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/nome"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imagem"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/tamanho"
        android:layout_width="200dp"
        android:layout_height="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/quantidade"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/quantidade"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/imagem"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/preco_und"
        android:layout_width="200dp"
        android:layout_height="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tamanho"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/imagem"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tamanho" />

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="148dp"
        android:layout_height="112dp"
        android:src="@android:drawable/alert_dark_frame"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="10dp" />
</android.support.constraint.ConstraintLayout>